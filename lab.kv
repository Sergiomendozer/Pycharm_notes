AnchorLayout:

#Boxlayout:
#MainWidget:

#<AnchorLayoutExample>

<AnchorLayout>:
    # right,left, center
    anchor_x: "center"
    # bottom, top, center
    anchor_y: "top"
    Boxlayout:
        size_hint: .2,.2
        Button:
            text: "A"
        Button:
            text: "B"

<BoxlayoutExample>:
    #orientation: "vertical"
    Button:
        text: "A"
        #size: "40dp", "40dp"
        size_hint: 1, .5
    Button:
        text: "B"
        #size: "40dp", "40dp"
        size_hint: .5, 1
    Button:
        text: "C"
        #size: "40dp", "40dp"
        size_hint: 1, 1

<MainWidget>:
    Button:
        text: "Hello!"
        size: 400, 200
        pos: 100, 20
        color: 0,1,0,1
    Label:
        text: "Hello label"
        size: "100dp", "80dp"
        pos: "200dp", "300dp"
        color: 1,0,0,1